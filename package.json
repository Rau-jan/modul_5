{
  "name": "express-nunjucks",
  "version": "3.1.0",
  "description": "Is the glue for express and nunjucks",
  "type": "module",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.cjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "keywords": [
    "express",
    "nunjucks",
    "template"
  ],
  "bugs": {
    "url": "https://github.com/pkolt/express-nunjucks/issues",
    "email": "pkoltyshev@gmail.com"
  },
  "license": "MIT",
  "author": "Pavel Koltyshev <pkoltyshev@gmail.com>",
  "files": [
    "README.md",
    "LICENSE.md",
    "dist"
  ],
  "repository": "pkolt/express-nunjucks",
  "scripts": {
    "test": "node --loader ts-node/esm --test --no-warnings ./src/*.test.ts",
    "clean": "rimraf ./dist",
    "build-esm": "tsc",
    "build-cjs": "tsc -p ./tsconfig.cjs.json && ts-rename --cjs ./dist/cjs",
    "build-types": "tsc -p ./tsconfig.types.json",
    "build": "npm run clean && npm run build-esm && npm run build-cjs && npm run build-types",
    "prepare": "npm run build",
    "format": "prettier --check src",
    "format-fix": "prettier --write src",
    "release": "release-it"
  },
  "dependencies": {
    "nunjucks-async-loader": "^2.1.2"
  },
  "engines": {
    "node": ">= 18"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.16.1",
    "@types/nunjucks": "^3.2.2",
    "@types/supertest": "^2.0.12",
    "prettier": "^2.8.8",
    "release-it": "^15.10.1",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "ts-rename": "^0.1.0",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "express": "^4.18.2",
    "nunjucks": "^3.2.4"
  }
}
